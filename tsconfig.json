{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "es5",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"allowJs": true,
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@features/*": ["src/features/*"],
			"@services/*": ["src/services/*"],
			"@styles/*": ["src/styles/*"],
			"@assets/*": ["src/assets/*"],
			"@data/*": ["src/data/*"],
			"@store/*": ["src/store/*"],
			"@hooks/*": ["src/hooks/*"],
			"@utils/*": ["src/utils/*"],
			"@pages/*": ["src/pages/*"],
			"@context/*": ["src/context/*"],
			"@layouts/*": ["src/layouts/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["src", "jest-setup.ts", "Global.d.ts"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
