{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es5",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "paths": {
            "@/*": ["src/*"],
            "@components/*" : ["src/components/*"],
            "@features/*": ["src/features/*"],
            "@services/*": ["src/services/*"],
            "@styles/*": ["src/styles/*"],
            "@assets/*": ["src/assets/*"],
            "@data/*": ["src/data/*"],
            "@store/*": ["src/store/*"],
            "@hooks/*": ["src/hooks/*"],
            "@utils/*": ["src/utils/*"],
            "@pages/*": ["src/pages/*"],
            "@types/*": ["src/types/*"],
            "@context/*": ["src/context/*"],
            "@layouts/*": ["src/layouts/*"]
        },
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
}
